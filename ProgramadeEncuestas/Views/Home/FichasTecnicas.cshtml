@model IEnumerable<ProgramadeEncuestas.Models.DW_ENCUESTAS>

<section id="FichasTecnicas" class="ficha-section">
    <div class="text-center mb-5">
        <h1>  Fichas técnicas  </h1>
    </div>
    <div class="container pt-5">

        <div class="row row-cols-1 row-cols-md-3 mb-5">
            @foreach (var item in Model.Where(x => x.ID_ESTADO == 2).OrderByDescending(x => x.ID_ENCUESTA))
            {

                <div class="col-lg-4 col-md-12 mb-5">
                    <div class="card-section border rounded p-3 ">
                        <div class="card-header-first rounded pb-5">
                            <h4 class="card-header-title text-white text-center pt-3">@item.NOMBRE</h4>
                        </div>
                        <div class="card-body ">
                            <p class="card-text">@item.PERIODO</p>

                            <div class="text-center">  @Html.ActionLink("Ver ficha técnica", "Fichatecnica", "Home", new {id = item.ID_ENCUESTA }, new { @class = "btn btn-primary" })</div>
                        </div>
                    </div>
                </div>

            }




        </div>
    </div>



</section>
